let greet name ~ do
    @dump "Hello, " name "!"
end

let main ~ do
    @dump "What is your name?"
    let name ~ @read
    -- In Rust you end your input on the shell
    -- with a double c-d or a newline plus c-d.
    -- Moreover, no newline is inserted after
    -- your input line, hence this terribless.
    @dump ""
    greet name
end
